language: c

sudo: false

install: true

addons:
  apt:
    packages:
    - rubber
    - latex-beamer

script:
 - ./t/0001-who-is-this
 - ./t/0002-rubber-pdf-doc 
 - ./t/0004-static-pages
 - rm -f doc/*.{aux,log,nav,out,snm,toc,bak}
 - git stash --all
 - git checkout gh-pages
 - rm -f 129-static.html doc/129.pdf doc/b-seahorse-Goettingen.pdf
 - git stash apply
 - git add --all
 - git commit -m "static-pages: generated"
 - git push
